    <%@timevalues1 = Exchangetimevalue.where("platform_id = '2' AND crypto_id = '2'")%>
    <%@timevalues2 = Exchangetimevalue.where("platform_id = '3' AND crypto_id = '3'")%>
    <%@alltimevalues = []%>
    <%@alltimevalues1 = []%>
    <%@alltimevalues2 = []%>
