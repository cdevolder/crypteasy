<header class="header">
  <div class="container">
    <div class="navbar navbar-expand-lg">
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to root_path, class: "navbar-wagon-brand" do %>
            <%= image_tag "crypteasy.png", height: "50px" %>
          <% end %>
        </li>
      </ul>
      <% if user_signed_in? %>
      <ul class="navbar-nav ml-auto">
        <li class="nav-item dropdown user-item">
          <a data-toggle="dropdown"  class=" dropdown-toggle" >
            <span class="hidden-md-down"> <%= link_to "Devises", cryptos_path%></span>
          </a>
        </li>
        <li class="nav-item dropdown user-item">
          <a data-toggle="dropdown" class=" dropdown-toggle">
            <span class="hidden-md-down"> <%= link_to "Dashboard", dashboard_path%></span>
          </a>
        </li>

        <%= link_to destroy_user_session_path, method: :delete do %>
        <i class="ion-log-out" style="color: #073F79"></i> <%=t(".sign_out", default:" ") %>
      <% end %>

      <% else %>
      <ul class="navbar-nav ml-auto">
        <li class="nav-item dropdown user-item">
          <a data-toggle="dropdown" class=" dropdown-toggle">
            <span class="hidden-md-down"> <%= link_to  t(".sign_in", default: "Login | Sign up"), new_user_session_path, class: "navbar-btn-login"%></span>
          </a>
        </li>
      </ul>
      <% end %>
    </div>
  </div>
</header>

