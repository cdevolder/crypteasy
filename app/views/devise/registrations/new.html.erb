<div class="container">
  <div class="layout-accounts">
    <div class="account-wrap">
      <div class="account-card">
        <div class="account-content smart-forms">
          <div id="contact">
            <div class="form-body">
              <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= f.error_notification %>

                <div class="mt30 mb30">
                  <div class=" main-title text-center" >
                      <h3 style="color: #073f79">CREATE AN ACCOUNT</h3>
                  </div>
                </div>
                <div class="section" style="color: #8dc247">
                  <%= f.input :email, required: true, autofocus: true, placeholder: "contact@crypt-easy.com" %>
                  <%= f.input :phone, required: true, autofocus: true, placeholder: "+33623456789" %>

                  <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                  <%= f.input :password_confirmation, required: true, class: "field prepend-icon" %>
                </div>
                <div class="form-footer mt30">
                  <%= f.button :submit, "Sign up", class: "btn btn-primary btn-block" %>
                </div>
              <% end %>
              <div class="text-right">
              <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
