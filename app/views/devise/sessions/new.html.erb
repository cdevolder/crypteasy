<div class="container">
  <div class="layout-accounts">
    <div class="account-wrap">
      <div class="account-card">
        <div class="account-content smart-forms">
          <div id="contact">
            <div class="form-body">
              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                <div class="mt30 mb30">
                  <div class="main-title text-center">
                      <h3 style="color: #073f79">LOG IN</h3>
                  </div>
                </div>
                <div class="section" style="color: #8dc247" >
                  <%= f.input :email, required: false, autofocus: true %>
                                  <%= f.input :password, required: false %>
                  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                </div>

                <div class="form-footer mt30">
                  <%= f.button :submit, "Log in", class: "btn btn-primary btn-block" %>
                </div>
              <% end %>
              <div class="text-right">
              <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
